<div id="home-head" style=<%- theme.home_background %>>
    <script>
        var menu = document.getElementById("menu")
        menu.className += " menu-color"
    </script>
    <script charset="UTF-8" id="LA_COLLECT" src="//sdk.51.la/js-sdk-pro.min.js"></script>
    <script>LA.init({id: "JmZj0HN8kNl7OKOp",ck: "JmZj0HN8kNl7OKOp",autoTrack:true,hashMode:true})</script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q3WRZCH2P4"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-Q3WRZCH2P4');
