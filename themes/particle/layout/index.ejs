<div id="home-head" style=<%- theme.home_background %>>
    <script>
        var menu = document.getElementById("menu")
        menu.className += " menu-color"
    </script>
    <!-- Matomo -->
    <meta name="baidu-site-verification" content="code-SOYWBsCyxF" />
    <script>
        var _paq = window._paq = window._paq || [];
        /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function() {
            var u="//s.ccc.so/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '4']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
        })();
    </script>
    <!-- End Matomo Code -->
    <% if(theme.head_block_enable){ %> 
    <div id="home-info" class="home-info" @click="home_click">
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="info">
            <div class="wrap">
                <h1><%- config.title %></h1>
                <h3><%- config.subtitle %></h3>
                <h5><%- config.description %></h5>
            </div>
        </span>
    </div>
    <% } %> 
</div>

<% 
    var wrapClass = ""
    if(!theme.card.enable){
        wrapClass = "home-posts-wrap-no-card"
    } 
%>

<div id="home-posts-wrap" class=<%- wrapClass %>>
    <div id="home-posts">

        <div id="posts">
            <%- include("posts") %>

            <%- include("current") %>
        </div>
    </div>
    <% if(theme.card.enable){ %>
    <div id="home-card">
        <%- include("card") %>
    </div>
    <% } %>
</div>
